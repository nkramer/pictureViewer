<?xml version="1.0" encoding="utf-8"?>
<utilities:BaseDialog x:Class="Pictureviewer.Importer.ImportPhotosDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utilities="clr-namespace:Pictureviewer.Utilities"
    Width="536">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                   Style="{StaticResource UiBodyTextBlockStyle}"
                   Text="Import from:" Margin="0"
                   Foreground="White"/>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0">
            <RadioButton x:Name="sdCardRadio" GroupName="ImportSource"
                         Style="{StaticResource {x:Type RadioButton}}"
                         Foreground="White" FontSize="14" FontFamily="Segoe UI Variable"
                         Margin="12,0,0,12" IsChecked="True" Content="Import from SD Card"/>

            <RadioButton x:Name="iCloudRadio" GroupName="ImportSource"
                         Style="{StaticResource {x:Type RadioButton}}"
                         Foreground="White" FontSize="14" FontFamily="Segoe UI Variable"
                         Margin="12,0,0,0" Content="Import from iCloud"/>

        </StackPanel>

        <TextBlock Grid.Row="4" Grid.Column="0"
                   Style="{StaticResource UiBodyTextBlockStyle}"
                   Text="Series name:"
                   Foreground="White" Margin="0"
                   VerticalAlignment="Center"/>

        <TextBox x:Name="seriesNameTextBox" Grid.Row="4" Grid.Column="2"
                 Background="{StaticResource midGray}"
                 Foreground="White"
                 FontSize="14" FontFamily="Segoe UI Variable"
                 Padding="8" VerticalAlignment="Center" Text=""/>
    </Grid>
</utilities:BaseDialog>
