<?xml version="1.0" encoding="utf-8"?>
<utilities:BaseDialog x:Class="Pictureviewer.Importer.ImportProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utilities="clr-namespace:Pictureviewer.Utilities"
    SizeToContent="Height"
    Width="436">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="statusText" Grid.Row="0"
                   Style="{StaticResource UiBodyTextBlockStyle}"
                   Text="0/0" Margin="0"
                   Foreground="White"
                   HorizontalAlignment="Center"/>

        <TextBlock x:Name="filenameText" Grid.Row="2"
                   Style="{StaticResource UiBodyTextBlockStyle}"
                   Text=""
                   Foreground="White"
                   HorizontalAlignment="Center"
                   TextTrimming="CharacterEllipsis"/>

        <ProgressBar x:Name="progressBar" Grid.Row="3"
                     Height="8"
                     Minimum="0" Maximum="100" Value="0"
                     Foreground="{StaticResource shotclockBrush}"
                     Background="{StaticResource midGray}" Margin="0"/>

        <Button x:Name="cancelButton"
                Grid.Row="5"
                Style="{StaticResource ButtonStyle1}"
                Click="cancelButton_Click"
                Content="Cancel"
                Width="60"
                Height="32"
                HorizontalAlignment="Center"/>
    </Grid>
</utilities:BaseDialog>
