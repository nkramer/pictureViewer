<Window x:Class="pictureviewer.shell.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pictureviewer.shell"
        mc:Ignorable="d"
        Background="Gray"
        Title="TestWindow" Height="450" Width="800">
    <Window.Template>
        <ControlTemplate TargetType="{x:Type Window}">
            <Border Background="{StaticResource darkGray}" Padding="32" BorderThickness="32" BorderBrush="Red">
                <ContentPresenter/>
            </Border>
        </ControlTemplate>
    </Window.Template>
    <Grid>
        <TextBlock Text="This is a test window." FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/> 
    </Grid>
</Window>
