<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Pictureviewer.Utilities.ImportPhotosDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Import Photos" Height="Auto" Width="600" WindowStyle="None"
    ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="Height">

    <Border Background="{StaticResource darkGray}" Padding="32">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Style="{StaticResource TitleTextBlockStyle}"
                       Text="Copy (import) photos from external source"
                       Foreground="White"/>

            <TextBlock Grid.Row="2" Style="{StaticResource FolderHeaderTextBlockStyle}"
                       Text="Import from:"
                       Foreground="White"/>

            <StackPanel Grid.Row="4" Margin="0">
                <RadioButton x:Name="sdCardRadio" GroupName="ImportSource"
                             Style="{StaticResource {x:Type RadioButton}}"
                             Foreground="White" FontSize="14" FontFamily="Segoe UI Variable"
                             Margin="0,0,0,12" IsChecked="True">
                    <TextBlock Text="Import from SD Card" Foreground="White"
                               FontSize="14" FontFamily="Segoe UI Variable"/>
                </RadioButton>
                <RadioButton x:Name="iCloudRadio" GroupName="ImportSource"
                             Style="{StaticResource {x:Type RadioButton}}"
                             Foreground="White" FontSize="14" FontFamily="Segoe UI Variable"
                             Margin="0,0,0,0">
                    <TextBlock Text="Import from iCloud" Foreground="White"
                               FontSize="14" FontFamily="Segoe UI Variable"/>
                </RadioButton>
            </StackPanel>

            <TextBlock Grid.Row="6" Style="{StaticResource FolderHeaderTextBlockStyle}"
                       Text="Series name:"
                       Foreground="White"/>

            <TextBox x:Name="seriesNameTextBox" Grid.Row="7"
                     Background="{StaticResource midGray}"
                     Foreground="White"
                     FontSize="14" FontFamily="Segoe UI Variable"
                     Padding="8" Height="32" VerticalContentAlignment="Center"/>

            <StackPanel Grid.Row="8" HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Style="{StaticResource ButtonStyle1}"
                        Click="ok_Click" Content="OK"
                        Margin="0,0,8,0" Width="60" Height="32"
                        IsDefault="True"/>
                <Button Style="{StaticResource ButtonStyle1}"
                        Click="cancel_Click" Content="Cancel"
                        Width="60" Height="32"
                        IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
