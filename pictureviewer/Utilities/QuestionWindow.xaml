<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Pictureviewer.Utilities.QuestionWindow"
	x:Name="Window" SizeToContent="WidthAndHeight">

	<Grid x:Name="LayoutRoot" Background="#FF333333" VerticalAlignment="Top" Margin="0" Width="380" Height="107.92">
		<Button x:Name="cancel" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,8,8"
                Click="cancel_Click"/>
		<TextBox x:Name="box" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Bottom" Margin="8,0,8,42.76" Background="#FF666666" Foreground="White"/>
		<TextBlock x:Name="textBlock" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Foreground="White" Margin="8,18.52,0,0"/>
		<Button x:Name="ok" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,87,8"
                Click="ok_Click" IsDefault="True"/>
	</Grid>
</Window>