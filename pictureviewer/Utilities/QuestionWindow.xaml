<utilities:BaseDialog
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:utilities="clr-namespace:Pictureviewer.Utilities"
	x:Class="Pictureviewer.Utilities.QuestionWindow"
	x:Name="Window">

	<Grid Width="316">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="16"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock x:Name="textBlock"
				   Grid.Row="0"
				   Style="{StaticResource UiBodyTextBlockStyle}"
				   TextWrapping="Wrap"
				   Text="TextBlock"
				   Foreground="White"
				   Margin="0"/>

		<TextBox x:Name="box"
				 Grid.Row="2"
				 TextWrapping="Wrap"
				 Text="TextBox"
				 Background="{StaticResource midGray}"
				 Foreground="White"
				 Padding="8"
				 Margin="0"/>
	</Grid>
</utilities:BaseDialog>