<UserControl x:Class="Pictureviewer.Library.SelectableImageDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:Pictureviewer.Core"
             
    Height="125" Width="125" Background="Transparent">
    <UserControl.ToolTip>
        <ToolTip x:Name="tooltip" Content="{Binding ImageDisplay.ImageInfo.ImageMetadataText}" >
        </ToolTip>
    </UserControl.ToolTip>
    <Grid>
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ImageDisplay.ImageInfo.Origin.IsSelected}" Value="True">
                        <Setter Property="Background" Value="{StaticResource midGray}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Border BorderBrush="white" BorderThickness="1" Margin="1"
                Visibility="{Binding IsFocusedImage, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
        </Border>
        <core:ImageDisplay x:Name="display" x:FieldModifier="public" Margin="8" Background="Transparent"            />
    </Grid>
</UserControl>
