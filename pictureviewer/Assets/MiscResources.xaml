<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:pictureviewer"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
>
    <SolidColorBrush x:Key="shotclockBrush" Color="#FFC5C5C5"/>
    <SolidColorBrush x:Key="menuForeground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="menuBackground" Color="#FF414141"/>
    <SolidColorBrush x:Key="darkGray" Color="#FF333333"/>
    <SolidColorBrush x:Key="midGray" Color="#FF414141"/>
    <SolidColorBrush x:Key="almostBlack" Color="#FF202020"/>

    <!-- book styles -->
    <Style x:Key="H1BlockStyle" TargetType="Block">
        <!-- "DefaultFontStyle" in metro, really subheader -->
        <Setter Property="FontSize" Value="56"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <!-- not the same left margin as H1TextBlockStyle; -3 isn't legal on Blocks -->
        <Setter Property="LineHeight" Value="53px"/>
        <!-- reduce space at top -->
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
    </Style>

    <Style x:Key="H2BlockStyle" TargetType="Block">
        <!-- "DefaultFontStyle" in metro, really subheader -->
        <Setter Property="FontSize" Value="26.667"/>
        <Setter Property="FontFamily" Value="Segoe UI Light"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- beware - FontFamily is overriden by CaptionView -->
    <Style x:Key="BodyBlockStyle" TargetType="Block">
        <!-- "DefaultFontStyle" in metro, really subheader -->
        <Setter Property="FontSize" Value="14.667"/>
        <Setter Property="FontFamily" Value="Segoe"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style x:Key="ItalicBlockStyle" TargetType="Block" BasedOn="{StaticResource BodyBlockStyle}">
        <!-- "DefaultFontStyle" in metro, really subheader -->
        <Setter Property="FontStyle" Value="Italic"/>
        <!--<Setter Property="Margin" Value="0,20,0,10"/>-->
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- hack: probably not useful once there's a way to align the block to the bottom of the page -->
    <Style x:Key="SpacerBlockStyle" TargetType="Block">
        <Setter Property="FontSize" Value="5"/>
        <Setter Property="FontFamily" Value="Segoe"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

    <Style x:Key="H1TextBlockStyle" TargetType="TextBlock">
        <!-- "DefaultFontStyle" in metro, really subheader -->
        <Setter Property="FontSize" Value="56"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Margin" Value="-3,0,0,10"/>
        <Setter Property="LineHeight" Value="53px"/>        <!-- reduce space at top -->
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>   
    </Style>

    <Style x:Key="H2TextBlockStyle" TargetType="TextBlock">
        <!-- "DefaultFontStyle" in metro, really subheader -->
        <Setter Property="FontSize" Value="26.667"/>
        <Setter Property="FontFamily" Value="Segoe UI Light"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- beware - FontFamily is overriden by CaptionView -->
    <Style x:Key="BodyTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style x:Key="ItalicTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
        <!-- "DefaultFontStyle" in metro, really subheader -->
        <Setter Property="FontStyle" Value="Italic"/>
        <!--<Setter Property="Margin" Value="0,20,0,10"/>-->
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- hack: probably not useful once there's a way to align the block to the bottom of the page -->
    <Style x:Key="SpacerTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="5"/>
        <Setter Property="FontFamily" Value="Segoe"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>
</ResourceDictionary>