<UserControl x:Class="Folio.Book.PhotoZoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:book="clr-namespace:Folio.Book"
             xmlns:core="clr-namespace:Folio.Core"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Black">
    <Grid>
        <!-- Current photo display -->
        <Grid x:Name="currentPhotoContainer" ClipToBounds="True">
            <core:ImageDisplay x:Name="currentImageDisplay"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center">
                <core:ImageDisplay.RenderTransform>
                    <TranslateTransform x:Name="currentTransform" X="0" Y="0"/>
                </core:ImageDisplay.RenderTransform>
            </core:ImageDisplay>
        </Grid>

        <!-- Next photo display (for transitions) -->
        <Grid x:Name="nextPhotoContainer" ClipToBounds="True" Visibility="Collapsed">
            <core:ImageDisplay x:Name="nextImageDisplay"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center">
                <core:ImageDisplay.RenderTransform>
                    <TranslateTransform x:Name="nextTransform" X="0" Y="0"/>
                </core:ImageDisplay.RenderTransform>
            </core:ImageDisplay>
        </Grid>
    </Grid>
</UserControl>
