<UserControl x:Class="Folio.Library.SelectableImageDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:Folio.Core"
             
    Height="125" Width="125" Background="Transparent">
    <UserControl.ToolTip>
        <ToolTip x:Name="tooltip" Content="{Binding ImageDisplay.ImageInfo.ImageMetadataText}" >
        </ToolTip>
    </UserControl.ToolTip>
    <Border CornerRadius="4">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ImageDisplay.ImageInfo.Origin.IsSelected}" Value="True">
                        <Setter Property="Background" Value="{StaticResource midGray}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Border BorderBrush="white" BorderThickness="1" Margin="1" CornerRadius="4"
                    Visibility="{Binding IsFocusedImage, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            </Border>
            <core:ImageDisplay x:Name="display" x:FieldModifier="public" Margin="8" Background="Transparent"            />
        </Grid>
    </Border>
</UserControl>
