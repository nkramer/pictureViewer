<utilities:BaseDialog x:Class="Folio.Utilities.ThemedMessageBox"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:utilities="clr-namespace:Folio.Utilities"
                      MinWidth="400"
                      MaxWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Icon -->
        <Path x:Name="IconPath"
              Grid.Column="0"
              Fill="White"
              Width="32"
              Height="32"
              Stretch="Uniform"
              Margin="0,0,16,0"
              VerticalAlignment="Top"/>

        <!-- Message Text -->
        <TextBlock x:Name="MessageText"
                   Grid.Column="1"
                   Text="{Binding Message, RelativeSource={RelativeSource AncestorType=utilities:BaseDialog}}"
                   Style="{StaticResource UiBodyTextBlockStyle}"
                   Foreground="White"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"
                   Margin="0"/>
    </Grid>
</utilities:BaseDialog>
